include /etc/nginx/expiresmap.conf;

server {
	server_name drinktracker.app;
	return 301 https://$host$request_uri;
}

server {
	gzip on;
	listen 443 ssl http2;
	server_name drinktracker.app;
	root /var/www/drinktracker;
	try_files $uri $uri/ /index.html;
	ssl_certificate /etc/letsencrypt/live/drinktracker.app/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/drinktracker.app/privkey.pem;
	expires $expires;

	location /service-worker.js {
		expires epoch;
	}
}
